<div class="tab-content">
    <div class="tab-pane active" id="id_meliscms_tool_sites_site_translations_modal_edit">
        <div class="row">
            <div class="col-xs-12 col-md-4">
                <div class="product-text-tab-container">
                    <ul class="nav-tabs product-text-tab">
                        {% for key,lang in languages %}
                            {% set locale = languages[key]['lang_cms_locale'] %}
                            {% if key == 0 %}
                                {% set active = 'active' %}
                            {% else %}
                                {% set active = '' %}
                            {% endif %}
                            <li class="{{ active }}">
                                <a class="clearfix" data-toggle="tab" href="#symfony_tool_tool_{{ locale }}" aria-expanded="true" data-env-id="1">
                                    <span class="pull-right">
                                        <img src="/MelisCms/images/lang-flags/{{ locale }}.png" class="pull-right">
                                    </span>
                                    <span>{{ languages[key]['lang_cms_name'] }}</span>
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="col-xs-12 col-md-8">
                <div class="tab-content">
                    {% for key,lang in languages %}
                        {% set locale = languages[key]['lang_cms_locale'] %}
                        {% if key == 0 %}
                            {% set active = 'active' %}
                        {% else %}
                            {% set active = '' %}
                        {% endif %}
                        <div id="symfony_tool_tool_{{ locale }}" class="tab-pane product-text-tab-content {{ active }}">
                            {{ form_start(form, {'attr': {'id': form.vars.attr['id'] ~ '_' ~ locale}}) }}
                            {% for key,field in form.children %}
                                {{ form_row(field, {'id': field.vars['id'] ~ '_' ~ locale }) }}
                            {% endfor %}
                            {{ form_end(form) }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>